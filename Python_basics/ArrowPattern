*
 * *
  * * *
   * * * *
  * * *
 * *
*


n=int(input())
n1=n//2
for i in range(1,n1+1):
    for j in range(1,i):
        print(" ",end="")
    for k in range(0,i): 
        print("*",end=" ") 
          
    print() 
n2=n-n1
for i in range(0,n2):
    for j in range (1,n2-i):
        print(" ",end="") 

    for k in range (0,n2-i): 
        print("*",end=" ") 
          
    print()
